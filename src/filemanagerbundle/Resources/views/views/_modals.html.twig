{% block delete_modal %}
    <div class="modal fade" id="js-confirm-delete" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">             
                    <h4 class="modal-title">{{ 'title.delete'|trans({}, 'Modules.Modseo.Admin') }}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">              
                    {{ 'confirm.delete'|trans({}, 'Modules.Modseo.Admin') }}
                </div>
                <div class="modal-footer">
                    {{ form_start(formDelete, {"attr" : {'class':'pull-right'}}) }}
                    {{ form_widget(formDelete, {'attr': {'onclick': ' SpinnerOpen(); '}} ) }}
                    {{ form_end(formDelete) }}
                    <div class="form-group">                 
                    <button type="button" class="btn btn-outline-secondary pull-left" title="{{ 'button.cancel'|trans({}, 'Modules.Modseo.Admin') }}"
                            data-dismiss="modal">{{ 'button.cancel'|trans({}, 'Modules.Modseo.Admin') }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block rename_modal %}
    <div class="modal fade" id="js-confirm-rename" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                {{ form_start(formRename) }}
                <div class="modal-header">         
                    <h4 class="modal-title">{{ 'title.rename.file'|trans({}, 'Modules.Modseo.Admin') }}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    {{ form_row(formRename.name) }}
                </div>
                <div class="modal-footer">
                    {{ form_row(formRename.send, {'attr': {'onclick': ' SpinnerOpen(); '}}) }}
                    <div class="form-group">                 
                        <button type="button" class="btn btn-outline-secondary pull-left" 
                            title="{{ 'button.cancel'|trans({}, 'Modules.Modseo.Admin') }}"
                            data-dismiss="modal">{{ 'button.cancel'|trans({}, 'Modules.Modseo.Admin') }}
                        </button>
                    </div>  
                </div>
                {{ form_end(formRename) }}
            </div>
        </div>
    </div>
{% endblock %}
