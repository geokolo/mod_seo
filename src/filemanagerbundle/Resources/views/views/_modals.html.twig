{% block javascripts %}
<script type="text/javascript">
    function SpinnerOpen() {
        $('.modal').modal('hide');        
        $("#filemanager").empty().append('<div class="container-fluid" id="filemanager"><div class="row"><div>{{ 'message.please.wait'|trans({}, 'Modules.Modseo.Admin') }}</div></div></div>');      
    }
</script>
{% endblock %}


