{% block generatefile_modal %}
    <div class="modal fade" id="js-confirm-generatefile" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">         
                    <h4 class="modal-title module-modal-title">{{ 'title.generate'|trans({}, 'Modules.Modseo.Admin') }}</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>                  
                </div>
